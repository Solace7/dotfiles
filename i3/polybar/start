#!/usr/bin/env sh

# Terminate already running bar instances
killall -q polybar

# Wait until the processes have been shut down
while pgrep -x polybar >/dev/null; do sleep 1; done

#Launch bar1 and bar2
polybar -c $HOME/.config/i3/polybar/solconfig sol &
#polybar -c $HOME/.config/i3/polybar/solconfig system &

if [ `xrandr --query | grep '\bconnected\b' | wc --lines` > 1 ]; then
	echo "External Polybar"
	polybar -c $HOME/.config/i3/polybar/solconfig ext &
fi

notify-send "Polybar Initialized"
